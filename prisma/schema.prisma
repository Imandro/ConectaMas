generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums (Commented out for SQLite compatibility, handled as Strings in App)
// enum UserRole { USER, ADMIN, MODERATOR }
// enum SpiritualLevel { EXPLORING, NEW_BELIEVER, GROWING, DISCIPLE }
// enum StruggleType { ... }
// enum Mood { ... }

// User Model
model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  passwordHash  String?
  name          String?
  image         String?
  role          String    @default("USER") // Was UserRole
  
  username      String?   @unique
  securityAnswer String?   // Answer to "What was your first pet's name?" (Hashed recommended, but simple for now)
  friends       User[]    @relation("UserFriends")
  symmetricFriends User[] @relation("UserFriends")
  
  isAnonymous   Boolean   @default(false)
  gender        String?   // MALE, FEMALE
  spiritualStatus     String?   // "ACCEPT" | "RENEW" | "DEEPEN" | "UNSURE"
  sinsToOvercome      String?   // JSON array stored as string
  problemsFaced       String?   // JSON array stored as string
  connectionMethods   String?   // JSON array stored as string
  spiritualLevel String   @default("Explorador") // Was SpiritualLevel
  
  hasCompletedOnboarding Boolean @default(false)
  hasSeenTutorialTour   Boolean @default(false)
  leaderPhone            String?   // For SOS leadership contact

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  struggles     UserStruggle[]
  checkins      DailyCheckin[]
  journalEntries JournalEntry[]
  streak        Streak?
  completedDevotionals UserDevotional[]
  watchedVideos UserVideo[]
  
  // Forum relations
  forumPosts    ForumPost[]
  forumReplies  ForumReply[]
  isCounselor   Boolean   @default(false) // Flag for counselor accounts
  
  pushSubscriptions PushSubscription[]
  accounts          Account[]
  sessions          Session[]
  mascot            Mascot?
}

model UserDevotional {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  devotionalId String
  completedAt  DateTime @default(now())

  @@unique([userId, devotionalId])
}

// Struggle Tracking
model UserStruggle {
  id          String       @id @default(cuid())
  userId      String
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String       // Was type/customName mixed. Let's use title for flexibility
  
  status      String       @default("ACTIVE") // ACTIVE, OVERCOME
  
  startDate   DateTime     @default(now())
  lastRelapse DateTime?
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@unique([userId, title])
}

// Daily Check-in
model DailyCheckin {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  mood        String   // Was Mood
  note        String?  // Optional note
  
  gratitude   String?
  prayer      String?
  
  createdAt   DateTime @default(now())
  
  @@index([userId, createdAt])
}

// Private Journal
model JournalEntry {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title       String?
  content     String
  tags        String // SQLite doesn't support String[], using comma separated string or relation. Simplifying to String for demo
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Gamification
model Streak {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  currentStreak Int    @default(0)
  longestStreak Int    @default(0)
  lastActivity  DateTime @default(now())
}

// Content
model Devotional {
  id          String   @id @default(cuid())
  title       String
  scripture   String
  content     String
  prayer      String
  application String
  
  tags        String // Was String[]
  publishedAt DateTime @default(now())
  
  isPremium   Boolean  @default(false)
}

// Videos
model Video {
  id          String   @id @default(cuid())
  title       String
  description String?
  videoUrl    String   // URL to video file or placeholder
  thumbnailUrl String?  // Thumbnail image
  duration    Int?     // Duration in seconds
  category    String   // Category for filtering
  tags        String?  // Additional tags
  publishedAt DateTime @default(now())
  
  isPremium   Boolean  @default(false)
  
  // Relations
  userVideos  UserVideo[]
}

model UserVideo {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  videoId   String
  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  
  watchedAt DateTime @default(now())
  liked     Boolean  @default(false)
  
  @@unique([userId, videoId])
}

model Song {
  id          String   @id @default(cuid())
  title       String
  artist      String
  url         String
  category    String?
  createdAt   DateTime @default(now())
}

// Daily Prayer (365 days)
model DailyPrayer {
  id          String   @id @default(cuid())
  dayOfYear   Int      @unique // 1-366
  title       String
  content     String
  theme       String?
}

// Curated Bible Verses (e.g., NTV specific for struggles)
model BibleVerse {
  id          String   @id @default(cuid())
  reference   String   // e.g. "Salmos 23:1"
  text        String   // The actual verse content (NTV)
  tags        String   // Categories: "Ansiedad", "Lujuria", etc.
  book        String
  chapter     Int
  verseNum    Int
}

// Community Forums
model ForumCategory {
  id          String      @id @default(cuid())
  name        String      @unique // "Ansiedad", "Lujuria", "Adicciones", etc.
  description String?
  icon        String?     // Emoji or icon name
  createdAt   DateTime    @default(now())
  
  posts       ForumPost[]
}

model ForumPost {
  id          String        @id @default(cuid())
  userId      String
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoryId  String
  category    ForumCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  
  title       String
  content     String        // Post content
  isAnonymous Boolean       @default(false) // If true, hide user identity
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  replies     ForumReply[]
  
  @@index([categoryId, createdAt])
}

model ForumReply {
  id          String     @id @default(cuid())
  postId      String
  post        ForumPost  @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId      String
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  content     String
  isAnonymous Boolean    @default(false)
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  @@index([postId, createdAt])
}

model PushSubscription {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  endpoint  String   @unique
  p256dh    String
  auth      String
  
  createdAt DateTime @default(now())
  
  @@index([userId])
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  
  access_token       String?  
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
model Mascot {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  level       Int      @default(1)
  experience  Int      @default(0)
  flamePoints Int      @default(0) // Puntos de llama obtenidos por actividades
  lastFed     DateTime @default(now())
  
  name        String   @default("Llami")
  mood        String   @default("FELIZ") // FELIZ, HAMBRIENTA, MOTIVADA
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ResetToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
